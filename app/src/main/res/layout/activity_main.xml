<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="fill_parent"
android:background="#FFFFFF"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="10dp"
tools:context="com.layer.quick_start_android">

    <EditText
        android:id="@+id/loginedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type in Your ID"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <EditText
        android:id="@+id/counselor_login_edittext_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type in Your Username"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <EditText
        android:id="@+id/counselor_login_edittext_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type in Your Password"
        android:textSize="15sp"
        android:gravity="center"
        android:password="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/counselor_login_edittext_username"
        android:layout_marginTop="3dp"/>

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:background="@color/roots_green"
        android:shadowColor="#ffaaaaaa"

        android:layout_height="wrap_content"
        android:layout_below="@+id/loginedittext"
        android:text="Login"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/counselorlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counselor Login"
        android:textColor="@color/tappable_blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/login_cr_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/loginedittext"
        android:layout_alignLeft="@+id/loginbutton"
        android:layout_alignStart="@+id/loginbutton" />

    <TextView
        android:id="@+id/counselor_login_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counselor Login"
        android:textSize="30sp"
        android:fontFamily="@string/common_google_play_services_enable_button"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/counselor_login_edittext_username"/>


</RelativeLayout>

